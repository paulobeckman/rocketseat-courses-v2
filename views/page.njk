{% extends "layout.njk" %}

{% block head %}
    <title>{{item.id_title}} - Rocketseat</title>
{% endblock %}


{% block content %}

    <div id="wrapper">
        <h1>{{item.id_title}}</h1>
    </div>
    <section class="page_infor">
        <div class="card" id = "{{item.id}}">
            <div class="card__page-container">
                <img src="/{{item.id}}.svg" alt="Imagem do {{item.id}}" class="card-img">
            </div>
            <div class="card__title">    
                <p>{{item.title}}</p>
            </div>
            <div class="card__infor">
                <p>{{item.modules}}</p>
                <div class="card__price">{{item.price}}</div>
            </div>
        </div>

        <div class = "infor_about">
            <p>{{item.description}}</p>
            <a href="https://rocketseat.com.br/{{item.id}}" target="_blank">SAIBA MAIS</a>
        </div>
    </section> 

{% endblock %}




