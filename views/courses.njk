{% extends "layout.njk" %}

{% block head %}
    <title>Cursos - Rocketseat</title>
{% endblock %}


{% block content %}
    <div id="wrapper">
        <h1>Cursos</h1>
    </div>

    <section class="cards">
        {% for item in items %}
            <div class="card" id = "{{item.id}}">
                <div class="card__page-container">
                    <img src="{{item.id}}.svg" alt="Imagem do {{item.id}}" class="card-img">
                </div>
                <div class="card__title">    
                    <p>{{item.title}}</p>
                </div>
                <div class="card__infor">
                    <p>{{item.modules}}</p>
                    <div class="card__price">{{item.price}}</div>
                </div>
            </div>
        {% endfor %}
    </section>

    <script src="scripts.js"></script>
{% endblock %}